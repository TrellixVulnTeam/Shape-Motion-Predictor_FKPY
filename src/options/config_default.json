{
  "H36M": {
    "filename": "h36train.hdf5",
    "root": "datasets/h36m/",
    "meta_file": "mov_dict.pickle",
    "train_ids_file": "train_ids.txt",
    "val_ids_file": "val_ids.txt",
    "test_ids_file": "test_ids.txt"
  },

  "dataset": {
    "type": "H36M",
    "name": "H36M",
    "batch_size": 15,
    "input_dim": 42,
    "input_rows": 14,
    "input_cols": 3,
    "hidden_dim": 512,
    "layer_dim": 3,
    "output_dim": 42,
    "seq_dim": 99,
    "serial_batches": false,
    "drop_last_batch": true,
    "n_threads": 1
  },
  "dataset_train": {
    "n_threads": 3
  },
  "dataset_val": {
    "serial_batches": true
  },
  "dataset_test": {
    "batch_size": 1,
    "drop_last_batch": false,
    "n_prev_frames": 0,
    "serial_batches": true
  },

  "model": {
    "load_epoch": -1,
    "type": "lstm",
    "master_gpu": 0,
    "reg_gpus": [0,1,2]
  },

  "train": {
    "nepochs_no_decay": 20,
    "nepochs_decay": 380,
    "reg_lr": 0.001,
    "num_iters_validate": 10,
    "optim": "sgd"
  },

  "logs": {
    "print_freq_s": 5,
    "display_freq_s": 180,
    "save_latest_freq_s": 3600
  },

  "networks": {
    "reg": {
      "type": "lstm",
      "hyper_params": {
        "input_dim": 42,
        "hidden_dim": 512,
        "layer_dim": 3,
        "output_dim": 42,
        "input_rows": 14,
        "input_cols": 3
      }
    }
  },

  "transforms_train": ["normalize"],
  "transforms_val": ["normalize"],
  "transforms_test": [],
  "transforms": {
    "to_tensor": {
      "type": "to_tensor",
      "general_args": {},
      "perkey_args": {
        "img": {}
      }
    },
    "normalize": {
      "type": "normalize",
      "general_args": {
        "mean": [18.4472, 233.4337, 834.2037],
        "std": [435.8993, 641.1512, 452.8181]
      },
      "perkey_args": {
        "img": {},
        "target": {}
      }
    },
    "horz_flip": {
      "type": "rand_horz_flip",
      "general_args": {},
      "perkey_args": {
        "img": {}
      }
    }
  }
}