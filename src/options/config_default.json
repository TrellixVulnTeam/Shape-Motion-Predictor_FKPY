{
  "H36M": {
    "filename": "h36train_x32_beta_pose.hdf5",
    "root": "datasets/h36m/",
    "meta_file": "mov_dict.pickle",
    "train_ids_file": "train_ids.txt",
    "val_ids_file": "val_ids.txt",
    "test_ids_file": "test_ids.txt"
  },

  "dataset": {
    "type": "H36M",
    "name": "H36MHidden50InputFrames",
    "batch_size": 14,
    "input_dim": 96,
    "input_rows": 32,
    "input_cols": 3,
    "hidden_dim": 512,
    "layer_dim": 3,
    "output_dim": 96,
    "seq_dim": 99,
    "serial_batches": false,
    "drop_last_batch": true,
    "n_threads": 1
  },
  "dataset_train": {
    "n_threads": 3
  },
  "dataset_val": {
    "serial_batches": true
  },
  "dataset_test": {
    "batch_size": 1,
    "drop_last_batch": false,
    "n_prev_frames": 0,
    "serial_batches": true
  },

  "model": {
    "load_epoch": -1,
    "type": "lstm",
    "master_gpu": 0,
    "reg_gpus": [0,1,2]
  },

  "train": {
    "nepochs_no_decay": 40,
    "nepochs_decay": 760,
    "reg_lr": 0.001,
    "num_iters_validate": 10,
    "optim": "sgd",
    "loss": "mse"
  },

  "logs": {
    "print_freq_s": 50,
    "display_freq_s": 30,
    "save_latest_freq_s": 10
  },

  "networks": {
    "reg": {
      "type": "lstm",
      "input_type": "hidden50FramesInput",
      "hyper_params": {
        "input_dim": 96,
        "hidden_dim": 512,
        "layer_dim": 3,
        "output_dim": 96,
        "input_rows": 32,
        "input_cols": 3
      }
    }
  },

  "transforms_train": ["normalize"],
  "transforms_val": ["normalize"],
  "transforms_test": [],
  "transforms": {
    "to_tensor": {
      "type": "to_tensor",
      "general_args": {},
      "perkey_args": {
        "img": {}
      }
    },
    "normalize": {
      "type": "normalize",
      "general_args": {
        "mean": [61.1347, 188.9903, 816.6437],
        "std": [438.7650, 651.2422, 474.5261]
      },
      "perkey_args": {
        "img": {},
        "target": {},
        "gt" : {}
      }
    },
    "horz_flip": {
      "type": "rand_horz_flip",
      "general_args": {},
      "perkey_args": {
        "img": {}
      }
    }
  }
}